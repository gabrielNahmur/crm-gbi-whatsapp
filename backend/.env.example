# ===========================================
# WhatsApp CRM - Configurações de Ambiente
# ===========================================
# Copie este arquivo para .env e preencha os valores

# Aplicação
APP_NAME=WhatsApp CRM
DEBUG=true
SECRET_KEY=sua-chave-secreta-super-segura-aqui

# Meta WhatsApp Business API
# Obtenha em: https://developers.facebook.com/
META_PHONE_NUMBER_ID=seu_phone_number_id
META_ACCESS_TOKEN=seu_access_token
META_WEBHOOK_VERIFY_TOKEN=token_verificacao_webhook
META_API_VERSION=v18.0

# OpenAI API
# Obtenha em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-sua-chave-openai
OPENAI_MODEL=gpt-4o-mini

# PostgreSQL
DATABASE_URL=postgresql://postgres:sua_senha@localhost:5432/whatsapp_crm

# Redis
REDIS_URL=redis://localhost:6379/0

# Horário Comercial
HORARIO_INICIO=08:00
HORARIO_FIM=18:00
TRABALHA_SABADO=true
HORARIO_FIM_SABADO=12:00
TRABALHA_DOMINGO=false

# Contexto da IA
MAX_CONTEXT_MESSAGES=10
CONTEXT_TTL_HOURS=24
